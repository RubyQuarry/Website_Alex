<% if @message.save  %>
  //$('form#new_message').effect('highlight', { color: 'green' }, 2000);
  $('#submitted').fadeIn(2000);
  $('#submitted').fadeOut(1500);
  $('form#new_message').trigger("reset");
<% else %>
  <% @message.errors.keys.each do |error| %>
    $('#message_<%= error %>').effect('highlight', { color: 'red' }, 2000);
  <% end %>
<% end %>
